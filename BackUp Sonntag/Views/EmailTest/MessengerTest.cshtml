
<div>
    <table id="notificationsTable2">
        <tr>
            <td>Test</td>
        </tr>
    </table>
</div>
@section scripts{

    <script src="/Scripts/jquery.signalR-2.2.0.js"></script>
    <script src="~/signalr/hubs"></script>
    <script>

        $(function () {



            var ticker = $.connection.MessengerHub;

            ticker.client.showNewContractMessage = function () {

                var table = document.getElementById("notificationsTable2");
                var row = table.insertRow(-1);
                var cell = row.insertCell(0);

                cell.innerHTML = "Neuer Vertrag wurde erstellt";
            }

            $.connection.hub.start().done();
        });
    </script>

}